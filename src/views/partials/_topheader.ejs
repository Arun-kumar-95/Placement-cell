<div class="desktop-main-top-header">
    <div class="" style="display: inline-flex; align-items: center;">
        <button class="menu-icon toggler" role="menu-item">
            <svg fill="currentColor" width="28px" height="28px" viewBox="0 0 20 20" preserveAspectRatio="xMidYMid meet"
                focusable="false">
                <g>
                    <path d="M2 4h16v2H2zM2 9h16v2H2zM2 14h16v2H2z"></path>
                </g>
            </svg>
        </button>
        <p>Welcome , <span>
                <%= locals.user %>
            </span></p>
    </div>

    <div class="notification">
        <button class="btn notify-button">
            <span class="notify-text">

                <% if(locals.interviews< 9) {%>
                    0<%= locals.interviews%>
                        <%}else{%>

                            <%= locals.notify %>
                                <%}%>
            </span>
            <svg fill="currentColor" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet" focusable="false"
                style="pointer-events: none; display: block; width: 24; height: 24">
                <g class="style-scope yt-icon">
                    <path
                        d="M10,20h4c0,1.1-0.9,2-2,2S10,21.1,10,20z M20,17.35V19H4v-1.65l2-1.88v-5.15c0-2.92,1.56-5.22,4-5.98V3.96 c0-1.42,1.49-2.5,2.99-1.76C13.64,2.52,14,3.23,14,3.96l0,0.39c2.44,0.75,4,3.06,4,5.98v5.15L20,17.35z M19,17.77l-2-1.88v-5.47 c0-2.47-1.19-4.36-3.13-5.1c-1.26-0.53-2.64-0.5-3.84,0.03C8.15,6.11,7,7.99,7,10.42v5.47l-2,1.88V18h14V17.77z">
                    </path>

                </g>
            </svg>
        </button>


    </div>


    <div class="user-box">
        <button class="user-icon-button">
            <img src="../images/avatar.jpg" alt="user-icon">
        </button>
    </div>

</div> <!-- /dashboard  main top header-->